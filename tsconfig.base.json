{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "esnext", "dom"],
    "target": "es2018",
    "rootDir": "./src",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
